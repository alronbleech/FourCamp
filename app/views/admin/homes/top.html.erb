<div style="height: 655px;">
  <div class="container mt-3 mb-3">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <span class="h1">お問い合わせ一覧</span>
      </div>
      <div class="col" id="contact_search">
        <%= render 'admin/contacts/search' %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-hover" id="contacts-list">
          <thead>
            <tr class="text-center">
              <th class="col-1">会員名</th>
              <th class="col-2">件名</th>
              <th class="col-1">ステータス</th>
            </tr>
          </thead>
          <%= render 'admin/contacts/index', contacts: @contacts %>
        </table>
        <div class="text-center">
          <%= paginate @contacts %>
        </div>
      </div>
    </div>
  </div>
</div>