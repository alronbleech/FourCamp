<div style="height: 610px;">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <span class="h1">お問い合わせ一覧</span>
      </div>
      <div class="col">
        <%= form_with(url: admin_path, method: :get, remote: true) do |f| %>
          <span class="font-weight-bold mr-3">対応済み/未対応</span><br>
          <%= f.select(:supported_status, [['未対応', :unsupported], ['対応済み', :fixed]], {prompt: '選択'}, class: "form form-control-sm", style:"width: 100px;") %>
          <%= f.submit '表示', class:"btn btn-primary ml-3" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-hover" id="contacts-list">
          <thead>
            <tr class="text-center">
              <th class="col-1">会員名</th>
              <th class="col-2">件名</th>
              <th class="col-1">ステータス</th>
            </tr>
          </thead>
          <%= render 'admin/contacts/index', contacts: @contacts %>
        </table>
      </div>
    </div>
  </div>
</div>