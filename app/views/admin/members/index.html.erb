<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col">
      <h1>会員一覧</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>会員名</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.name %>
                <% end %>
              </td>
              <td><%= member.nickname %></td>
              <td><%= member.email %></td>
              <td><%= member.is_deleted %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>