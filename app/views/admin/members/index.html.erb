<div style="height: 655px;">
  <div class="container mt-3 mb-3">
    <div class="row">
      <div class="col">
        <h1>会員一覧</h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr class="text-center">
              <th class="col-2">会員ID</th>
              <th class="col-2">会員名</th>
              <th class="col-3">ニックネーム</th>
              <th class="col-3">メールアドレス</th>
              <th class="col-2">会員ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr class="text-center">
                <td class="font-weight-bold align-middle"><%= member.id %></td>
                <td class="font-weight-bold align-middle">
                  <%= link_to admin_member_path(member), class: "text-dark" do %>
                    <%= member.name %>
                  <% end %>
                </td>
                <td class="font-weight-bold align-middle"><%= member.nickname %></td>
                <td class="font-weight-bold align-middle"><%= member.email %></td>
                <% if member.is_deleted == false %>
                  <td class="text-primary font-weight-bold align-middle">
                    <%= member.boolean_label(member.is_deleted) %>
                  </td>
                <% else %>
                  <td class="text-secondary font-weight-bold align-middle">
                    <%= member.boolean_label(member.is_deleted) %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>