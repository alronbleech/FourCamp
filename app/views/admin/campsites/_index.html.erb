<div class="row">
  <div class="col">
    <table class="table table-hover">
      <thead>
        <tr class="text-center">
          <th>キャンプ場写真</th>
          <th>キャンプ場名</th>
          <th>キャンプ場種類</th>
          <th>レビュー数</th>
        </tr>
      </thead>
      <tbody>
        <% campsites.each do |campsite| %>
        <tr class="text-center">
          <td>
            <% if campsite.campsite_image.attached? %>
              <%= image_tag campsite.campsite_image, size: "100x100", class: "image-fit-sm" %>
            <% else %>
              <%= image_tag asset_path('no_image1.jpg'), size: "100x100" %>
            <% end %>
          </td>
          <td class="font-weight-bold align-middle">
            <%= link_to admin_campsite_path(campsite), class:"text-dark" do %>
              <%= campsite.name %>
            <% end %>
          </td>
          <td class="font-weight-bold align-middle"><%= campsite.campsite_type.type_name %></td>
          <td class="font-weight-bold align-middle"><%= campsite.reviews.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate campsites, remote: true %>
  </div>
</div>