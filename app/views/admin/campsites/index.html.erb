<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col">
      <h1>キャンプ場一覧</h1>
    </div>
    <div class="col">
      <%= link_to "キャンプ場新規登録", new_admin_campsite_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with(url: admin_campsites_path, method: :get) do |f| %>
      <table class="table">
        <tr>
          <th>県名</th>
          <td>
            <%= f.collection_select :prefecture_id, @prefectures, :id, :prefecture_name %>
            <%= f.collection_select :campsite_type_id, @campsite_types, :id, :type_name %>
            <%= f.submit '表示' %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <% @campsites.each do |campsite| %>
        <tr>
          <td>
            <%= link_to admin_campsite_path(campsite) do %>
              <%= image_tag campsite.campsite_image, size: "100x100" %>
            <% end %>
          </td>
          <td><%= campsite.name %></td>
          <td><%= campsite.campsite_type.type_name %></td>
          <td><%= campsite.address %></td>
          <td>レビュー数</td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

