<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col">
      <h1>お問い合わせ</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @contact, url: member_contacts_path do |f| %>
          <table class="table">
            <tr>
              <th><%= f.label :subject, '件名' %></th>
              <td><%= f.text_field :subject, class:"form-control form-control-sm align-middle", style:"width: 200px;" %></td>
            </tr>
            <tr>
              <th><%= f.label :demand, 'お問い合わせ内容' %></th>
              <td><%= f.text_area :demand, class:"form-control form-control-sm align-middle", style:"width: 400px; height: 200px;" %></td>
            </tr>
          </table>
          <div class="text-center col">
            <%= f.submit '送信', class: 'btn btn-success', "data-confirm" => "内容を再度ご確認ください。送信しますか？" %>
          </div>
        <% end %>
    </div>
  </div>
</div>