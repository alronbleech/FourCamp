<div class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <span class="bg-light h2">会員新規登録</span>
      </div>
      <div class="col-8"></div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-9">
      <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member' do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless table-sm">
        <tr class="border-0">
          <td class="col-3"><%= f.label :名前 %></td>
          <td><%= f.text_field :name, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :フリガナ %></td>
          <td><%= f.text_field :name_ruby, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :ニックネーム %></td>
          <td><%= f.text_field :nickname, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :パスワード %></td>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上の半角英数字で登録)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :パスワード確認 %></td>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class="pt-4"><%= f.submit "登録", class:"btn btn-primary col-3" %></td>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>


<%= render "public/shared/links" %>