<div class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <span class="bg-light h2">会員新規登録</span>
      </div>
      <div class="col-8"></div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-9">
      <%= form_with model: @member, url: member_path(current_member),method: :patch do |f| %>
      <table class="table table-borderless table-sm">
        <tr class="border-0">
          <td class="col-3"><%= f.label :名前 %></td>
          <td><%= f.text_field :name, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :フリガナ %></td>
          <td><%= f.text_field :name_ruby, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :ニックネーム %></td>
          <td><%= f.text_field :nickname, class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-6" %></td>
        </tr>
        <tr>
          <td class="col-3"><%= f.label :プロフィール写真 %></td>
          <td> 写真 </td>
        </tr>
        <tr>
          <th><%= f.submit "変更を保存", class: 'btn btn-success' %></th>
          <td><%= link_to "退会",  members_quit_path, class: 'btn btn-danger' %></td>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>
