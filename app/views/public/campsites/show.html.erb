<div style="height: 655px;">
  <div class="container-fluid mt-3 mb-3">
    <div class="row">
      <div class="col">
        <span class="h1"><%= @campsite.name %></span>
      </div>
      <div class="col-2">
        <%= link_to "レビューを投稿", new_campsite_review_path(@campsite.id), class: "btn btn-success" %>
      </div>
      <div class="col-3">
        <%= form_with url: campsite_reviews_path(@campsite), method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.hidden_field :model, :value => "tag" %>
          <%= f.hidden_field :method, :value => "perfect" %>
          <%= f.submit 'タグ検索', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-2">
        <% if @campsite.campsite_image.attached? %>
          <%= image_tag @campsite.campsite_image, size: "250x250" %>
        <% else %>
          <%= image_tag 'no_image!!', size: "250x250" %>
        <% end %>
      </div>
      <div class="col-1"></div>
      <div class="col-5">
        <table class="table">
          <tr>
            <th>県名</th>
            <td><%= @campsite.prefecture.prefecture_name %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @campsite.address %></td>
          </tr>
          <tr>
            <th>種類</th>
            <td><%= @campsite.campsite_type.type_name %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @campsite.phone_number %></td>
          </tr>
          <tr>
            <th>アクセス方法</th>
            <td><%= @campsite.route %></td>
          </tr>
          <tr>
            <th>特徴</th>
            <td><%= @campsite.feature %></td>
          </tr>
          <tr>
            <th>注意事項</th>
            <td><%= @campsite.considerations %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>